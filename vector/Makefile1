NAME = Container
NAMEFT = ft_container
NAMESTD = std_container

SRCSFT = test_vector/mainft.cpp
SRCSSTD = test_vector/mainstd.cpp

CC = c++

CFLAGS = -Wall -Wextra -Werror -std=c++98

OBJSFT = $(SRCSFT:.cpp=.o)

OBJSSTD = $(SRCSSTD:.cpp=.o)

HEADERS = vector.hpp


%.o: % .cpp $(HEADERS)
			$(CC) $(CFLAGS) -c $< -o $@


all : $(NAME)

$(NAME) : $(NAMESTD) $(NAMEFT)

$(NAMESTD) : $(OBJSSTD) $(HEADERS)
			$(CC) $(CFLAGS)  $(OBJSSTD) -o  $(NAMESTD)

$(NAMEFT) : $(OBJSFT) $(HEADERS)
			$(CC) $(CFLAGS) $(OBJSFT) -o  $(NAMEFT) 
clean:		
			rm -f $(OBJS)
fclean : clean
			rm -f $(NAME)

re :		fclean all

.PHONY : all clean re fclean

			
